<!doctype html>

<html>

<head>
  <title>SwingGo - Learn from a Virtual Coach</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">  
  <script src="https://code.jquery.com/jquery.js"></script>
  <script src="js/bootstrap/bootstrap.min.js"></script>
  <link rel="stylesheet" href="css/bootstrap-theme.min.css">
  <link rel="stylesheet" href="css/bootstrap.min.css">  
  <link rel="stylesheet" href="css/profilestyles.css">
  <!-- Font type -->
  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Fanwood+Text" />
</head>

<body>
  <div class="screen_container">
    <!-- Profile Button and Logo ------------------->
    <!-- Include a first-time user message overlay-->
    <div class="top_container"> 
      <a class="thumbnailtop" href="home">
        <img id="backarrow" src="images/backarrow.png">
      </a>
      <header class="title">Profile</header>
      <form class="editBtn" method="get" action="profile">
        <button id="edit" type="submit">Edit</button> 
      </form> 

    </div>

    <!-- Camera Component -------------------------->
    <!-- Include a first-time user message overlay-->
    <div class="content_container">
      <div class="welcome">
        <div class="user">
          <!-- FB Login doesn't correctly parse information -->
          <Text>Name:</Text>
          <Text>{{user.name}}</Text><br><br>
          <Text>Email:</Text>
          <Text>{{user.email}}</Text><br><br>
          <Text>PW:</Text>
          <Text>hidden</Text><br><br>
          <Text>Dominant Hand:</Text>
          <Text>{{user.dominanthand}}</Text><br><br>
          {{#if user.handicap}}
            <Text>Average Handicap:</Text><br>
            <Text>{{user.handicap}}</Text><br><br>
          {{else}}
            <Text>Average Handicap:</Text><br>
            <Text>Not Available</Text><br><br>
          {{/if}}
        </div>        
      </div>
      <div class="info">
      </div>
    </div>

    <!-- Button to transition to swing clips -->
    <!-- for the current session -------------->
    <div class="bottom_container">
      <div class="bottom_buttons"> 
        <form method="get" action="/">
          <button id="review" type="submit">Sign Out</button> 
        </form>
        <form method="get" action="/">
          <button id="review" type="submit">Deactivate Account</button> 
        </form>      
      </div>

    </div>
  </div>
</body>
</html>
