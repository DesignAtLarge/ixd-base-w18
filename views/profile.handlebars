<body>
	<img src="/img/{{image}}" alt="profile pic" class="img-thumbnail rounded-circle d-block mx-auto" id="pfp">
	<div class="status">
		<button class="dot" onclick="document.getElementById('file-input').click();">+</button>
		<input id="file-input" type="file" name="name" style="display: none;" accept="image/*" />
	</div>
	<h1 id="name">{{name}}</h1>
	<div id="stats" class="container">
		<div class="row">
			<div class="col text-center">
				<h2># of Sessions</h2>
			</div>
			<div class="col text-center">
				<h2># of Pomms</h2>
			</div>
			<div class="col text-center">
				<h2>Study Minutes</h2>
			</div>
		</div>
		<div class="row">
			<div class="col text-center">
				<p id="sessions">{{sessions}}</p>
			</div>
			<div class="col text-center">
				<p id="pomms">{{pomms}}</p>
			</div>
			<div class="col text-center">
				<p id="minutes">{{studymins}}</p>
			</div>
		</div>
	</div>

	<section id="buttons">
		<div class="button fixed-top d-flex justify-content-start">
			<a href="/home" class="previous shadow-sm rounded">&#8249; Back</a>
		</div>
	</section>

	<h2>Progress To Next Pomm:</h2>
	<div class="progress">
		<div class="progress-bar" id="pomm-progress" style="width: 25%" role="progressbar" aria-valuenow="25"
			aria-valuemin="0" aria-valuemax="100"></div>
	</div>

	<div class="text-center">
		<button class="btn-lg btn-primary btn-block d-inline-block" id="logout">Sign Out</a>
	</div>

	<div class="navbar">
		<div class="col">
			<a class="btn btn-default icon-btn" href="/profile">
				<img src="img/user.png" class="icon-pic" />
			</a>
		</div>
		<div class="col">
			<a class="btn btn-default icon-btn" href="/home">
				<img src="img/home.png" class="icon-pic" />
			</a>
		</div>
		<div class="col">
			<a class="btn btn-default icon-btn" href="/friends">
				<img src="img/friends.png" class="icon-pic" />
			</a>
		</div>
	</div>

