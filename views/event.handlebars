<!doctype html>

<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/bootstrap-theme.min.css" rel="stylesheet">
    <link href="/css/event.css" rel="stylesheet">


    <script src="https://code.jquery.com/jquery.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/event.js"></script>

    <title>Event</title>
</head>

<body>
    <div class="main">
        <header>
            <div class="headerUnit">
                <a href="/">
                    <h1 class="longTitle">Clubs</h1>
                </a>
            </div>

            <div class="headerUnit">
                <a href="/event">
                    <h1 class="longTitle">Upcoming Events</h1>
                </a>
            </div>
            <div id="divImg">
                <a href="/calendar">
                    <h1 class="longTitle">My Calendar</h1>
                </a>
            </div>
        </header>


        {{#each events}}
        <section>
            <div class="sectionUnit">
                <h4 class="date">{{month}}/{{day}}</h4>
                <h3 class="event-name">{{clubEvent}}</h3>
                <p class="org">{{clubName}}</p>
                <p>{{location}}</p>

            </div>
            <div class="sectionUnit2">
                <img src="../images/heart_outline.png" class="heart" id="{{id}}" onclick=clickHeart('{{id}}');>
            </div>
        </section>
        {{/each}}
    </div>
</body>

</html>
