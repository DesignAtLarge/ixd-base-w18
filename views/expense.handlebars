<html>
    <head>
	    <title >Home.ie</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" href="/css/index.css">
    </head>
    <body>
        <div class="container">
            <div class="row navbar">
                <li class="col-xs-4 col-sm-4 col-md-4 col-lg-4 nav_icon">
                    <a href="/stats"> <script class="glyphicon glyphicon-object-align-bottom" style="color: white; font-size:50px"></script></a>
                </li>

                <li><a href="/addChore"><h1 class="col-xs-4 col-sm-4 col-md-4 col-lg-4" id="title">Home.ie</h1></a></li>

                    {{#if users}}
                    <li class=" col-xs-4 col-sm-4 col-md-4 col-lg-4 nav_icon dropdown pull-right">
                        <a  data-toggle="dropdown" class="dropdown-toggle"><img id="fbProfilePic" src="{{users.0.url}}"><b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li class="divider"></li>
                            <li><a href="/signOut">Sign Off</a></li>
                        </ul>
                    </li>
                    {{else}}
                    <a id="defaultProfile" href="/"><script class="glyphicon glyphicon-user" style="top: 18px" ></script></a>
                    {{/if}}
            </div>


            <div class="row nav_bar">
                    <div class="nav_chore col-sm-6 col-xs-6 col-md-6 col-lg-6">
                        <a id="choresBtn" href="/homepage">
                            <div class="nav">
                                Chores
                            </div>
                        </a>
                    </div>

                    <div class="nav_expense col-sm-6 col-xs-6 col-md-6 col-lg-6">
                        <a id="expensesBtn" href="/expenseHomepage">
                            <div class="nav">
                                Expenses
                            </div>
                        </a>
                    </div>
            </div>
                <div class="expense_rows row">
                    {{#each expenses}}
                    <div class="expense col-xs-12 col-sm-12 col-md-12 col-lg-12 card">
                        <div class="expense_content">
                            <div class="row">
                                <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
                                    <h3>{{name}}</h3>
                                    <p>{{description}}</p>
                                </div>
                                <div class="done col-xs-4 col-sm-4 col-md-4 col-lg-4">
                                        <button class="btn btn-success boughtBtn" type="submit" data-toggle="modal" data-target="#myModal">Bought</button>
                                </div>
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="text-align:center">
                                    <span class="glyphicon glyphicon-chevron-down" style="font-size:30px"></span>
                                </div>
                            </div>
                            <canvas width="400" height="400" id="{{imageURL}}"> </canvas>
                        </div>
                    </div>
                    {{/each}}
                </div>

                <div class="add col-xs-10 col-sm-10 col-md-10 col-lg-10">
                    {{#if expenses}}
                    <form action="/expense">
                        <button id="submitBtn" class="btn btn-success btn-block" type="submit" > Create New Expense</button>
                        {{/if}}
                    </form>
                </div>
        </div>

<!-- Modal  -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">How much you spent?</h4>
                    </div>
                    <div class="modal-body">
                        <input type="number" id="price" placeholder="Enter a number for your total expense" style="border: 1px solid gray;width: 100%;" required>
                    </div>
                    <div class="modal-footer">
                        <button id="bought-confirmation" type="submit" class="btn btn-success" data-dismiss="modal" onclick="yeet()" style="left: 15px;position: absolute;">Confirm</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        </div>


        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/3.0.1/handlebars.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.bundle.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.min.js"></script>
        <script type="text/javascript" src="js/bootstrap.js"></script>
        <script type="text/javascript" src="js/expenseHomepage.js"></script>
    </body>
</html>
