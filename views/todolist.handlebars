<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous" />

    <!-- Gaegu Font -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Gaegu&display=swap" rel="stylesheet">

    <link rel="stylesheet" type="text/css" href="css/todolist.css" />
    <title>To Do List</title>
</head>
<body>
    <h1>To-do list</h1>

    <!-- to do list -->
    <section class="todolist text-center" id="list-bg">
      <ul>
      {{#each tasklist}}
        <li id={{taskid}}>{{taskname}}</li>
      {{/each}}
      </ul>
	</section>
	
    <!-- add task button/form -->
    <form class="add-task" id="add-task-form" role="form" method="get" action="/addTask">
		<label for="taskname"></label>
		<input type="text" id="task-input" placeholder="Task Name" name="taskname" required/>

		<input type="submit" id="add-btn" value="Add Task">
	</form>
	
    
	<section id="buttons">
      <div class="button fixed-top d-flex justify-content-start">
        <a href="/home" class="previous shadow-sm rounded">&#8249; Back</a>
      </div>
      <div class="button fixed-bottom d-flex justify-content-end">
        <a href="/worksession" class="next shadow-sm rounded">&#8250; Next</a>
      </div>
    </section>

	<script type="text/javascript" src="js/todolist-functions.js"></script>
</body>
</html>
