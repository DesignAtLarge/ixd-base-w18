                <li class='col-xs-8 col-sm-8 col-md-8 col-lg-8'><h1>TrailBlazer</h1></li>
            </ul>


        <form class="searchBar">
            <input type="text" onclick="this.select()" onKeyDown="if(event.keyCode==13){   event.preventDefault();   enterLoad();}" id="txtautocomplete" placeholder="Search Hikes Near">
            <label id="lblresult"></label>
            <button type="button">Search</button>
        </form>
            
