    {{!-- <link href="/css/bootstrap.min.css" rel="stylesheet"> --}}
    <link rel="stylesheet" href="/css/styles.css">

</head>
<body class="log-activity">

<div class="container">
    <div class="title-header mb-4">
        <div class="row justify-content-center">
            <div class="col-5 jumbotron">
                <h1 class="display-4">Log Activity</h1>
            </div>

            <div class="col-1 align-self-center" id="nav-btn">
                <button type="button" class="btn btn-light fas fa-bars fa-2x" onclick="location.href='#'"></button>
            </div>
        </div>
    </div>


    <div class="row col-sm-5 col-sm-offset-2 col-md-6 col-md-offset-4 col-lg-6 col-lg-offset-4 mb-1">
        <h3>What did you do?</h3>
    </div>


    <div class="row gx-0 row-cols-3 row-cols-sm-3 row-cols-md-4 row-cols-lg-4 mb-3">
        {{#each activity}}
        <div class="col text-center mb-3"><button type="button" class="btn btn-light">{{this}}</button></div>
        {{/each}}
        <div class="col text-center mb-3"><button type="button" class="btn btn-light">Add <i class="fas fa-plus"></i></button></div>
    </div>


    <div class="row col-sm-5 col-sm-offset-2 col-md-6 col-md-offset-4 col-lg-6 col-lg-offset-4 mb-1">
        <h3>How did that make you feel?</h3>
    </div>

    <div class="row gx-0 row-cols-3 row-cols-sm-3 row-cols-md-4 row-cols-lg-4 mb-3">
        {{#each mood}}
        <div class="col text-center mb-3"><button type="button" class="btn btn-light">{{this}}</button></div>
        {{/each}}
        <div class="col text-center mb-3"><button type="button" class="btn btn-light">Add <i class="fas fa-plus"></i></button></div>

        {{!-- These are the face buttons. Not sure if we are going to keep them or remove them. --}}
        {{!-- <div class="col-1 text-center"><button type="button" class="btn btn-light far fa-sad-tear fa-2x"></button></div>
        <div class="col-1 text-center"><button type="button" class="btn btn-light far fa-frown fa-2x"></button></div>
        <div class="col-1 text-center"><button type="button" class="btn btn-light far fa-meh fa-2x"></button></div>
        <div class="col-1 text-center"><button type="button" class="btn btn-light far fa-smile fa-2x"></button></div>
        <div class="col-1 text-center"><button type="button" class="btn btn-light far fa-laugh-beam fa-2x"></button></div> --}}
    </div>


    <div class="row col-sm-5 col-sm-offset-2 col-md-6 col-md-offset-4 col-lg-6 col-lg-offset-4 mb-1">
        <h3>Any physical symptoms?</h3>
    </div>

    <div class="row gx-0 row-cols-3 row-cols-sm-3 row-cols-md-4 row-cols-lg-4 mb-3">
        {{#each symptom}}
        <div class="col text-center mb-3"><button type="button" class="btn btn-light">{{this}}</button></div>
        {{/each}}
        <div class="col text-center mb-3"><button type="button" class="btn btn-light">Add <i class="fas fa-plus"></i></button></div>
    </div>

    <div class="row justify-content-end">
        <div class="col-sm-4 col-md-4 col-lg-2 col-4">
                <button type="button" class="btn btn-primary">Next <i class="fas fa-arrow-right"></i></button>
            </div>
    </div>

    <div class="row justify-content-center mt-5">
        <div class="col-1 text-center">
            <button class="btn btn-lg btn-secondary fas fa-home" onclick="location.href='/index'"></Button>
        </div>
    </div>

    

</div>

</body>
</html>