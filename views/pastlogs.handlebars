<!DOCTYPE html>
<html>
<head>
    <!--Title-->
    <title>Account</title>
    <meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--BootStrap-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <link rel = "stylesheet" href = "/css/style.css">
</head>
<body>

      <!--Heading-->
      <section>
            <div class = "container">
                <div>
                    <p>
                        <a class="text-left" href = "/enterlog">
                            <img 
                            src = "/images/left-arrow.svg"
                            alt = "left arrow"
                            height = "20px"
                            width = "20px">
                        </a>
                        <h3 class = "text-center"> Account </h3>
                        <hr>
                    </p>
                </div>
            </div>
        </section>
        <br>

    <!--Log In Button-->
    <section class = "login container">
        <div class = "text-center">
            <a onclick="document.getElementById('id01').style.display='block'" style="width:auto;" id = "login" class = "btn btn-outline-dark" href = "#">Log In</a>
        </div>
        <div id="id01" class="modal">
            <form class="modal-content animate">
                <div class="imgcontainer">
                <span onclick="document.getElementById('id01').style.display='none'" class="close">&times;</span>
                </div>

                <div class="login container">
                <label for="uname"><b>Username</b></label>
                <input type="text" placeholder="Enter Username" name="uname">

                <label for="psw"><b>Password</b></label>
                <input type="password" placeholder="Enter Password" name="psw">
                    
                <a style="width:auto;" id = "login" class = "btn btn-outline-dark" href = "#">Submit</a>
                </div>
            </form>
        </div>
    </section>
    <br>

    <!--Past Logs-->
    <section class = "container">
            <div class = "text-center">
                <div class = "text-center">
                    <p>
                        <h4>Past Logs<h4>
                    </p>
                </div>
            </div>
        </section>

    <!-- JavaScript Function -->
    <script>
    // Get the modal
    var modal = document.getElementById('id01');

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function(event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }
    </script>
</body>
</html>