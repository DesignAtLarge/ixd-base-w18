    <div class="container-fluid">
        <form id="signup-form">
            <div class="form-group">
                <label for="exampleInputEmail1" class="form-label">First Name</label>
                <input type="text" class="form-control form-item" id="signup-first" placeholder="Enter first name">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1" class="form-label">Last Name</label>
                <input type="text" class="form-control form-item" id="signup-last" placeholder="Enter last name">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1" class="form-label">Email address</label>
                <input type="email" class="form-control form-item" id="signup-email" placeholder="Enter email">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1" class="form-label">Password</label>
                <input type="password" class="form-control form-item" id="signup-password" placeholder="Password">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1" class="form-label">Confirm Password</label>
                <input type="password" class="form-control form-item" id="signup-confirm"
                    placeholder="Confirm Password">
            </div>
            <button id="submit"
                class="btn btn-link btn-primary btn-lg btn-block work-button text-deocration-none shadow-lg sign-up-btn"
                type="submit">Sign up</button>
        </form>
    </div>


    <div class="container-fluid">
        <h2 class="sign-up-text">Already have an account?</h2>
        <a class="btn btn-link btn-primary btn-lg btn-block work-button text-deocration-none shadow-lg sign-up-btn"
