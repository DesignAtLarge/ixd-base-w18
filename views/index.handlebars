<html>
    <head>
	      <title >Home.ie</title>


        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" href="/css/index.css">
    </head>
    <body>
        <div class="container">
            <div class="row navbar">
                <div class="col-sm-4 nav_icon">
                    <a href="/stats"> <script class="glyphicon glyphicon-object-align-bottom" style="color: white; font-size:50px"></script></a>
                </div>
                <h1 class="col-sm-4" id="title">Home.ie</h1>
                <div class="col-sm-4 nav_icon">
                    <script class="glyphicon glyphicon-user" style="color: white; font-size:50px"></script>
                </div>

            </div>
        </div>
            <div class="chores">
            <div class="container">
                <div class="row nav_bar">
                    <div class="nav_chore col-sm-6">
                        <div class="nav">
                            <a id="choresBtn" href="/homepage">Chores</a>
                        </div>
                    </div>

                    <div class="nav_expense col-sm-6">
                        <div class="nav">
                            <a id="expensesBtn" href="/addexpense">Expenses</a>
                        </div>
                    </div>
                </div>
                <div class="chore_rows row">
                    {{#each chores}}
                    <div class="chore col-md-6 card">
                        <div class="chore_content">
                        <div class="row">
                            <div class="col-sm-9">
                            <h3>{{name}}</h3>
                            <p>{{description}}</p>
                        </div>
                            <div class="done col-sm-3">
                                {{#ifequal priority 1}}
                                <input id="submitBtn" class="btn btn-success" value="Done" type="submit" />
                                {{/ifequal}}
                                {{#ifequal priority 2}}
                                <input id="submitBtn" class="btn btn-warning" value="Done" type="submit" />
                                {{/ifequal}}
                                {{#if 'priority==3'}}
                                <input id="submitBtn" class="btn btn-danger" value="Done" type="submit" />
                            {{/if}}
                            </div>
                            <div class="col-sm-12" style="text-align:center">
                                <span class="glyphicon glyphicon-chevron-down" style="font-size:30px"></span>
                            </div>

                        </div>
                        <img src="{{imageURL}}">
                        </div>
                    </div>
                    {{/each}}
                </div>
                <div class="expense_rows row">
                    {{#each expenses}}
                    <div class="expense col-md-6 card">
                        <div class="expense_content">
                            <div class="row">
                                <div class="col-sm-9">
                                    <h3>{{name}}</h3>
                                    <p>{{description}}</p>
                                </div>
                                <div class="done col-sm-3">
                                    <input id="submitBtn" class="btn btn-success" value="Done" type="submit" />
                                </div>
                                <div class="col-sm-12" style="text-align:center">
                                    <span class="glyphicon glyphicon-chevron-down" style="font-size:30px"></span>
                                </div>
                            </div>
                            <img src="{{imageURL}}">
                        </div>
                    </div>
                    {{/each}}
                </div>

                <div class="add col-md-4">

                    {{#if chores}}
                    <form action="/chore" style="text-align: center; position:fixed; bottom:0px; width:100%; left:0px; margin:0px">
                        <input id="submitBtn" class="btn btn-success btn-block" value="Create New Chore" type="submit" />
                        {{/if}}
                        {{#if expenses}}
                        <form action="/expense" style="text-align: center; position:fixed; bottom:0px; width:100%; left:0px; margin:0px">
                            <input id="submitBtn" class="btn btn-success btn-block" value="Create New Expense" type="submit" />
                            {{/if}}
                        </form>
                    </div>
            </div>
        </div>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/3.0.1/handlebars.min.js"></script>
        <script src="js/bootstrap.js"></script>
        <script src="js/index.js"></script>
    </body>
</html>
