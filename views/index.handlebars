<html>
    <head>
	      <title>Home.ie</title>


        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" href="/css/index.css">
    </head>
    <body>
        <h1>Welcome to Home.ie</h1>
        <div class="chores">
            <div class="container">
                <div class="row nav_bar">
                    <div class="col-sm-6">
                        <div class="nav">
                                <a href="/">Chores</a>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="nav">
                            <a href="/expense">Expense</a>
                        </div>
                    </div>
                </div>
                <div class="row">
                    {{#each chores}}
                    <div class="chore col-md-6">
                        <div class="chore_content">
                        <div class="row">
                            <div class="col-sm-9">
                        <h2>{{name}}</h2>
                        <p>{{description}}</p>

                            </div>
                            <div class="done col-sm-3">
                                {{#if '1==1'}}
                                <button class="green" type="button">{{priority}}</button>
                                {{/if}}
                            </div>
                        <button type="button" class="expand">+</button>
                        </div>
                        <img src="{{imageURL}}">
                        </div>
                    </div>
                    <br>
                    {{/each}}


                    {{#each expense}}
                    <div class="chore col-md-6">
                        <h2>{{name}}</h2>
                        <p>{{description}}</p>
                        <button class="green" type="button">{{priority}}</button>
                        <button type="button" class="expand">+</button>
                        <img src={{imageURL}}>
                    </div>
                    {{/each}}

                    <div class="add col-md-4">
                        <a href="/chore">+add</button>
                    </div>

                </div>
            </div>
        </div>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="/js/homepage.js"></script>
        <script src="js/bootstrap.js"></script>
        <script src="js/index.js"></script>
    </body>
</html>
