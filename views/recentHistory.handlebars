<html>

<head>
	<title>hApp</title>

	<link rel="stylesheet" href="/scripts/bootstrap/dist/css/bootstrap.min.css">
	<link rel="stylesheet" href="/scripts/bootstrap-material-design/dist/css/bootstrap-material-design.css">
	<link rel="stylesheet" href="/static/css/main.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body class="bg-light">
	{{!-- Begin here (or replace this with any static code already written). --}}

	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<div class="navbar-header">
			<a class="navbar-brand center" href="/home"><h3>hApp</h3></a>
			<a href="/home" class="left">
				<button type="button" class="btn btn-lg btn-header">
					<img src="/static/icons/back-arrow.svg" height="30"/>
				</button>
			</a>
		</div>
	</nav>

	<div class="container" style="text-align:center; padding-top: 2.5%;">
		{{#each history}}
			<div class="recentPin" style = "width:100%; height: 15%;">
				<h6 style="margin-bottom:0;text-align: left; width:48%; display: inline-block;">{{pinName}}
					{{#if userCreated}}
						&nbsp;<i class="fa fa-user" style="color:#999;"></i>
					{{/if}}
				</h6>
				<span style="text-align: right; width:50%; display: inline-block;">{{date}}</span>
				<br/><br/>
				<p class="giveMeEllipsis" style="text-align: left;">{{description}}</p>
			</div>
			<hr style="border-top-width: 3px; border-top-color: #fff;">
		{{/each}}
	</div>

	

	<script src="/scripts/jquery/dist/jquery.js"></script>
	<script src="/scripts/bootstrap/dist/js/bootstrap.js"></script>
	<script src="/scripts/popper.js/dist/umd/popper.js"></script>
	<script src="/scripts/bootstrap-material-design/dist/js/bootstrap-material-design.js"></script>
	<script src="/static/js/main.js"></script>
	<script src="/static/js/viewRecentHistory.js"></script>
</body>

</html>