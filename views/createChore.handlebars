<html>
<head>
	  <title>Create a Chore</title>
	  <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/form.css">
</head>
<body>
	<div class="container">
    	<form id="addChoreForm" aria-hidden="false" role="form" method="get" action="/addChore">
            <legend><h1>Create a Chore</h1></legend>
            <div class="form-group">
                <label for="name">Name of chore</label>
                <input id="name" class="form-control" name="name" placeholder="wash the dishes" />
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input class="form-control" name="description" type="text" placeholder="If you are going to use the dish washer to clean the dishes make sure to rinse or scrub atleast a bit before placing in dishwasher!" />
            </div>
            <div class="form-group">
                <label for="priority">Priority</label>
                <br/>
                <input
                    type="radio"
                    name="priority"
                    value="low"
                    /> low<br/>
                <input
                    type="radio"
                    name="priority"
                    value="med"
                    /> med<br/>
                <input
                    type="radio"
                    name="priority"
                    value="hi"
                    /> hi<br/>
            </div>
            <div class="form-group">
                <input class="btn btn-danger" type="reset" value="Reset" />
                <input id="submitBtn" class="btn btn-success" value="Add the chore" type="submit" />
            </div>
        </form>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script src="/js/createChore.js"></script>
</body>
</html>
